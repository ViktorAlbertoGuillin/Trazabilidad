@model Trazabilidad.Repositorio.Entidades.Bloque

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar</h1>

<h4>Bloque</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="CadenaBloque" asp-action="AgregarBloque">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Datos" class="control-label"></label>
                <input asp-for="Datos" class="form-control" placeholder="Lote 10 Elaboracion 04/23 Vencimiento 04/24" value="Lote 10 Elaboracion 04/23 Vencimiento 04/24" />
                <span asp-validation-for="Datos" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
